<launch>

  <arg name="gui" default="true" />
  <arg name="gpu" default="-1" />
  <arg name="input_image" default="/d435/color/image_rect_color" />
  <arg name="input_depth" default="/d435/aligned_depth_to_color/image_raw" />
  <arg name="input_rect" default="$(arg input_image)/screenrectangle" />

  <node name="handheld_object_tracking"
        pkg="jsk_perception" type="handheld_object_tracking.py"
        output="screen" >
    <remap from="~input" to="$(arg input_image)" />
    <remap from="~input/depth" to="$(arg input_depth)" />
    <remap from="~input/rect" to="$(arg input_rect)"/>

    <rosparam subst_value="true">
      gpu: $(arg gpu)
      pretrained_model: $(find jsk_perception)/trained_data/handheld_object_tracking.caffemodel
    </rosparam>
  </node>

  <node name="apply_mask_image"
        pkg="jsk_perception" type="apply_mask_image">
    <remap from="~input" to="$(arg input_image)" />
    <remap from="~input/mask" to="handheld_object_tracking/output/mask" />
    <rosparam>
      approximate_sync: true
      clip: false
    </rosparam>
  </node>

  <node name="image_view2_display"
        pkg="image_view2" type="image_view2" >
    <remap from="image" to="$(arg input_image)" />
  </node>

  <group if="$(arg gui)">
    <node name="image_view0"
          pkg="image_view" type="image_view">
      <remap from="image" to="handheld_object_tracking/output/viz" />
    </node>
    <node name="image_view1"
          pkg="image_view" type="image_view">
      <remap from="image" to="apply_mask_image/output" />
    </node>
    <node name="image_view2"
          pkg="image_view" type="image_view">
      <remap from="image" to="handheld_object_tracking/output/debug/viz" />
    </node>
  </group>

</launch>
